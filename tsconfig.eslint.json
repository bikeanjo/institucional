{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*",
    "tests/**/*",
    ".storybook/**/*",
    "vitest.shims.d.ts",
    "vitest.workspace.ts",
    "setupTests.ts",
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "storybook-static"],
  "compilerOptions": {
    "composite": false,
    "paths": {
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
    }
  }
}
